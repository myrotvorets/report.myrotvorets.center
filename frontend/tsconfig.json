{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "compileOnSave": true
}
