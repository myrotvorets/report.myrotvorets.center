{
    "root": true,
    "parserOptions": {
        "project": ["./tsconfig.json"]
    },
    "extends": [
        "@myrotvorets/myrotvorets-preact-ts"
    ],
    "reportUnusedDisableDirectives": true,
    "rules": {
        "jest/no-deprecated-functions": "off"
    },
    "env": {
        "browser": true,
        "serviceworker": true
    },
    "overrides": [
        {
            "files": ["webpack.config.ts", ".webpack/*.ts"],
            "parserOptions": {
                "project": ["./tsconfig-webpack.json"]
            }
        }
    ]
}
